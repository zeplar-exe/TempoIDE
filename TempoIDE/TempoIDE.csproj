<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>netcoreapp3.1-windows</TargetFramework>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <ItemGroup>
      <Compile Update="UserControls\FileHandling.EditorControl.cs">
        <DependentUpon>EditorControl.xaml</DependentUpon>
      </Compile>
      <Compile Update="UserControls\SyntaxTextBox.ControlLogic.cs">
        <DependentUpon>SyntaxTextBox.xaml</DependentUpon>
      </Compile>
      <Compile Update="UserControls\SyntaxTextBox.PublicInterface.cs">
        <DependentUpon>SyntaxTextBox.xaml</DependentUpon>
      </Compile>
      <Compile Update="ProgramData\ProgramFiles.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>ProgramFiles.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.11.0-1.final" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="ProgramData\ProgramFiles.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>ProgramFiles.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

</Project>
