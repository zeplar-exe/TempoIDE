<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <UseWPF>true</UseWPF>
        <TargetFramework>net48</TargetFramework>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <Compile Update="Properties\Shortcuts.Designer.cs">
        <DesignTimeSharedInput>True</DesignTimeSharedInput>
        <AutoGen>True</AutoGen>
        <DependentUpon>Shortcuts.settings</DependentUpon>
      </Compile>
      <Compile Update="UserControls\EditorControl.FileHandling.cs">
        <DependentUpon>EditorControl.xaml</DependentUpon>
      </Compile>
      <Compile Update="UserControls\SyntaxTextBox.ControlLogic.cs">
        <DependentUpon>SyntaxTextBox.xaml</DependentUpon>
      </Compile>
      <Compile Update="UserControls\SyntaxTextBox.PublicInterface.cs">
        <DependentUpon>SyntaxTextBox.xaml</DependentUpon>
      </Compile>
      <Compile Remove="packages\**" />
      <Compile Update="UserControls\ColoredLabel.PublicInterface.cs">
        <DependentUpon>ColoredLabel.xaml</DependentUpon>
      </Compile>
      <Compile Update="UserControls\SyntaxTextBox.Mouse.cs">
        <DependentUpon>SyntaxTextBox.xaml</DependentUpon>
      </Compile>
      <Compile Update="UserControls\EditorTabItem.xaml.cs">
        <DependentUpon>EditorTabItem.xaml</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="LazyCache" Version="2.1.3" />
      <PackageReference Include="Microsoft.Build" Version="16.10.0" />
      <PackageReference Include="Microsoft.Build.Tasks.Core" Version="16.10.0" />
      <PackageReference Include="Microsoft.CodeAnalysis" Version="3.10.0" />
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.10.0" />
      <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="3.10.0" />
      <PackageReference Include="Ookii.Dialogs.Wpf" Version="3.1.0" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="packages\**" />
      <EmbeddedResource Include="Resources\Configs\intellisense-cs.xml" />
      <None Remove="ProgramData\intellisense.cs.xml" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="packages\**" />
      <Compile Remove="ExplorerTest\stuff.cs" />
    </ItemGroup>

    <ItemGroup>
      <Page Remove="packages\**" />
    </ItemGroup>
    
    <ItemGroup>
      <Page Remove="Skins\Dark.xaml" />
      <Resource Include="Skins\Dark.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
      </Resource>
      <Page Remove="Skins\Light.xaml" />
      <Resource Include="Skins\Light.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
      </Resource>
      <None Remove="Resources\Icons\cs-icon.png" />
      <EmbeddedResource Include="Resources\Icons\cs-icon.png" />
      <None Remove="Resources\Icons\png-icon.png" />
      <EmbeddedResource Include="Resources\Icons\png-icon.png" />
      <None Remove="Resources\Icons\xml-icon.png" />
      <EmbeddedResource Include="Resources\Icons\xml-icon.png" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Properties\Shortcuts.settings">
        <Generator>SettingsSingleFileGenerator</Generator>
        <LastGenOutput>Shortcuts.Designer.cs</LastGenOutput>
      </None>
    </ItemGroup>

</Project>
