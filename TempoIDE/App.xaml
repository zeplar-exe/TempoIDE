<Application x:Class="TempoIDE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:commands="clr-namespace:TempoIDE.Classes.Commands"
             xmlns:locals="clr-namespace:TempoIDE.UserControls"
             xmlns:properties="clr-namespace:TempoIDE.Properties"
             StartupUri="Windows/MainWindow.xaml"
             Startup="App_OnStartup"
              >
    <Application.Resources>
        <ResourceDictionary x:Key="Styles">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/Dark.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            
            <properties:Shortcuts x:Key="Shortcuts"/>

            <Style x:Key="WindowStyle" TargetType="Window">
                <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
                <Setter Property="WindowStyle" Value="None"/>
                <Setter Property="AllowsTransparency" Value="True"/>
            </Style>
            
            <Style x:Key="ExplorerPanelStyle" TargetType="Panel">
                <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundColor}"/>
            </Style>
            
            <Style x:Key="AutoCompleteBoxStyle" TargetType="ListBox">
                <Setter Property="Background" Value="#4d4747"/>
            </Style>
            
            <DataTemplate x:Key="AutoCompleteItemTemplate">
                <ListBoxItem Background="Transparent">
                    
                </ListBoxItem>
            </DataTemplate>
            
            <Style x:Key="TopbarMenuItemStyle" TargetType="ContextMenu">
                <Setter Property="Background" Value="{DynamicResource ToolbarBackgroundColor}"/>
            </Style>
            
            <Style x:Key="MenuItemStyle" TargetType="MenuItem">
                <Setter Property="Background" Value="{DynamicResource ToolbarBackgroundColor}"/>
            </Style>
            
            <ControlTemplate x:Key="MainWindowTopbarTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                    </Grid.ColumnDefinitions>
                    
                    <Menu 
                        Grid.Column="0" 
                        Background="Transparent" 
                        Foreground="{DynamicResource BaseTextColor}">
                        
                        <MenuItem Header="File" Background="Transparent">
                            <MenuItem.Resources>
                                <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemStyle}"/>
                            </MenuItem.Resources>
                            
                            <MenuItem Header="New solution">
                                <MenuItem.Command> <commands:NewSolutionCommand/> </MenuItem.Command>
                            </MenuItem>
                            
                            <MenuItem Header="Open...">
                                <MenuItem.Command> <commands:OpenDropdown/> </MenuItem.Command>
                                
                                <MenuItem Header="File...">
                                    <MenuItem.Command> <commands:OpenFileCommand/> </MenuItem.Command>
                                </MenuItem>
                                    
                                <MenuItem Header="Folder...">
                                    <MenuItem.Command> <commands:OpenFolderCommand/></MenuItem.Command>
                                </MenuItem>
                            </MenuItem>
                            
                            <locals:MenuSeparator/>
                            
                            <MenuItem Header="Settings">
                                <MenuItem.Command> <commands:OpenSettingsCommand/> </MenuItem.Command>
                            </MenuItem>
                            
                            <locals:MenuSeparator/>
                            
                            <MenuItem Header="Exit">
                                <MenuItem.Command> <commands:ExitCommand/> </MenuItem.Command>
                            </MenuItem>
                        </MenuItem>
                        
                        <MenuItem Header="Edit" Background="Transparent">
                            <MenuItem.Resources>
                                <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemStyle}"/>
                            </MenuItem.Resources>
                            
                            <MenuItem 
                                Header="Copy"
                                InputGestureText="{Binding Path=Copy, Source={StaticResource Shortcuts}}">
                                
                                <MenuItem.Command>
                                    <commands:CopyTextCommand/>
                                </MenuItem.Command>
                            </MenuItem>
                            
                            <MenuItem
                                Header="Paste"
                                InputGestureText="{Binding Path=Paste, Source={StaticResource Shortcuts}}">
                                
                                <MenuItem.Command>
                                    <commands:PasteTextCommand/>
                                </MenuItem.Command>
                            </MenuItem>
                            
                            <MenuItem
                                Header="Cut"
                                InputGestureText="{Binding Path=Cut, Source={StaticResource Shortcuts}}">
                                
                                <MenuItem.Command>
                                    <commands:CutTextCommand/>
                                </MenuItem.Command>
                            </MenuItem>
                        </MenuItem>
                        
                        <MenuItem Header="View"></MenuItem>
                        <MenuItem Header="Navigation"></MenuItem>
                        <MenuItem Header="Code"></MenuItem>
                        <MenuItem Header="Build"></MenuItem>
                        <MenuItem Header="Window"></MenuItem>
                        <MenuItem Header="Help"></MenuItem>
                    </Menu>

                    <Button
                        Grid.Column="2"
                        Content="Min"
                        Background="Transparent"
                        Foreground="{DynamicResource BaseTextColor}"
                        BorderThickness="0"
                        Click="MinimizeWindow">
                    </Button>

                    <Button
                        Grid.Column="3"
                        Content="Max"
                        Background="Transparent"
                        Foreground="{DynamicResource BaseTextColor}"
                        BorderThickness="0"
                        Click="MaximizeWindow"/>

                    <Button
                        Grid.Column="4"
                        Content="X"
                        Background="Transparent"
                        Foreground="{DynamicResource BaseTextColor}"
                        BorderThickness="0"
                        Click="CloseWindow"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>