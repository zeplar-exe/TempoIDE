<Application x:Class="TempoIDE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:locals="clr-namespace:TempoIDE.UserControls"
             xmlns:properties="clr-namespace:TempoIDE.Properties"
             StartupUri="Windows/MainWindow.xaml"
             Startup="App_OnStartup"
              >
    <Application.Resources>
        <ResourceDictionary x:Key="Styles">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/Dark.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <properties:Shortcuts x:Key="Shortcuts"/>

            <Style TargetType="{x:Type Window}">
                <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
                <Setter Property="WindowStyle" Value="None"/>
                <Setter Property="AllowsTransparency" Value="True"/>
            </Style>
            
            <Style x:Key="ModalWindowStyle" TargetType="Window" BasedOn="{StaticResource {x:Type Window}}">
                <Setter Property="ResizeMode" Value="NoResize"/>
                <Setter Property="Height" Value="550"/>
                <Setter Property="Width" Value="800"/>
            </Style>
            
            <Style x:Key="TextStyle">
                <Setter Property="Control.Foreground" Value="{DynamicResource BaseTextColor}"/>
                <Setter Property="Control.Background" Value="{DynamicResource TextBoxBackgroundColor}"/>
            </Style>
            
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextStyle}"/>
            
            <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource TextStyle}">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            
            <Style TargetType="{x:Type locals:ExplorerViewItem}" BasedOn="{StaticResource TextStyle}">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            
            <Style TargetType="{x:Type locals:ExplorerFileItem}" BasedOn="{StaticResource TextStyle}">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            
            <Style TargetType="{x:Type locals:ExplorerView}">
                <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundColor}"/>
            </Style>
            
            <Style TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="{DynamicResource BaseTextColor}"/>
            </Style>
            
            <Style TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderColor}" />
            </Style>
            
            <Style TargetType="{x:Type MenuItem}">
                <Setter Property="Background" Value="{DynamicResource ToolbarBackgroundColor}"/>
            </Style>
            
            <DataTemplate x:Key="AutoCompleteItemTemplate">
                <ListBoxItem Background="Transparent" />
            </DataTemplate>
            
            <ControlTemplate x:Key="CloseButton" TargetType="locals:TopbarControl">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button
                        Grid.Column="1"
                        Content="X"
                        FontSize="17"
                        Background="Transparent"
                        Foreground="{DynamicResource BaseTextColor}"
                        BorderThickness="0"
                        Click="CloseWindow"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>