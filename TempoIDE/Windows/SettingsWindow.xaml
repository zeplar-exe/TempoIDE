<Window x:Class="TempoIDE.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TempoIDE.UserControls"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        ResizeMode="CanResizeWithGrip"
        Title="Settings" Height="550" Width="800">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="15"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <local:TopbarControl Grid.Row="0" Template="{StaticResource SettingsMenuTopbarTemplate}"/>
        
        <Grid Grid.Row="1">
            <TreeView 
                Background="{DynamicResource SecondaryBackgroundColor}">
                
                <TreeViewItem Header="Appearance/Behavior"></TreeViewItem>
                <TreeViewItem Header="Performance"></TreeViewItem>
                <TreeViewItem Header="Keybinds"></TreeViewItem>
            </TreeView>
        </Grid>
    </Grid>
</Window>
