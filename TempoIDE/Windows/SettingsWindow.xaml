<Window x:Class="TempoIDE.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TempoIDE.Windows"
        xmlns:userControls="clr-namespace:TempoIDE.UserControls"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="Settings" Height="550" Width="800">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="15"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <userControls:TopbarControl Grid.Row="0" Template="{StaticResource MainWindowTopbarTemplate}"/>
    </Grid>
</Window>
