<Window x:Class="TempoIDE.Windows.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TempoIDE.Windows"
        mc:Ignorable="d"
        Style="{StaticResource ModalWindowStyle}"
        Title="ProgressDialog" Height="60" Width="270"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" BorderThickness="0">
            <TextBlock VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Name="Header"/>    
        </Border>
        
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <ProgressBar
                Grid.Row="1"
                Name="ProgressBar"
                Minimum="0"
                Maximum="100" 
                Background="DarkGray"
                Foreground="Gray"/>
        </Grid>
    </Grid>
</Window>
