<Window x:Class="TempoIDE.Windows.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TempoIDE.Windows"
        xmlns:userControls="clr-namespace:TempoIDE.UserControls"
        xmlns:miniControls="clr-namespace:TempoIDE.UserControls.MiniControls"
        mc:Ignorable="d"
        Title="Error" Height="180" Width="350"
        Style="{StaticResource ModalWindowStyle}"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <miniControls:TopbarControl Grid.Row="0">
            <miniControls:TopbarControl.Template>
                <ControlTemplate>
                    <TextBlock 
                        Text="{Binding Path=Title}"
                        FontSize="15"/>
                </ControlTemplate>
            </miniControls:TopbarControl.Template>
            
        </miniControls:TopbarControl>
        
        <TextBlock Grid.Row="2" Name="TextDisplay" FontSize="17" TextWrapping="Wrap"/>
        
        <StackPanel 
            Grid.Row="4" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Margin="5">
            
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Setter Property="Width" Value="35"/>
                    <EventSetter Event="Click" Handler="ResultClickHandler"/>
                </Style>
            </StackPanel.Resources>
            
            <Button 
                Name="OkButton"
                Content="Ok"
                local:UserDialog.BoundResult="Ok"/>
            
            <Button 
                Name="CancelButton"
                Content="Cancel"
                local:UserDialog.BoundResult="Cancel"/>
            
            <Button 
                Name="SaveButton"
                Content="Save"
                local:UserDialog.BoundResult="Save"/>
            
            <Button 
                Name="OpenButton"
                Content="Open"
                local:UserDialog.BoundResult="Open"/>
            
            <Button 
                Name="YesButton"
                Content="Yes"
                local:UserDialog.BoundResult="Yes"/>
            
            <Button 
                Name="NoButton"
                Content="No"
                local:UserDialog.BoundResult="No"/>
            
            <Button 
                Name="IgnoreButton"
                Content="Ignore"
                local:UserDialog.BoundResult="Ignore"/>
        </StackPanel>
    </Grid>
</Window>
