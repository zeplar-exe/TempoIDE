<UserControl x:Class="TempoIDE.UserControls.ExplorerPanelElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempoIDE.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.ContextMenu>
        <local:ExplorerPanelContextMenu/>
    </UserControl.ContextMenu>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Button Name="ExpandButton" Grid.Column="0" Click="ExpandButton_OnClick">
            <Image Width="20"/>
        </Button>
        <Image Grid.Column="1" Name="Icon"/>
        <TextBlock Grid.Column="2" Name="Text" Foreground="{DynamicResource BaseTextColor}"/>
    </Grid>
</UserControl>
