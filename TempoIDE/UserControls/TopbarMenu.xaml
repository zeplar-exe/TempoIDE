 <UserControl x:Class="TempoIDE.UserControls.TopbarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempoIDE.UserControls"
             mc:Ignorable="d"
             PreviewMouseLeftButtonDown="TopbarMenu_OnPreviewMouseLeftButtonDown"
             Loaded="TopbarMenu_OnLoaded">
    <UserControl.Resources>
        <SolidColorBrush x:Key="TopbarMenuSelectedColor" Color="#466b8a"></SolidColorBrush>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Name="MenuNameTextBlock"/>
        
        <Border Grid.Row="1" Background="{StaticResource DarkToolbarBackgroundColor}" Visibility="Collapsed">
            <StackPanel Name="ItemsPanel" MinWidth="140" Visibility="Collapsed" Background="{StaticResource DarkToolbarBackgroundColor}"/>
        </Border>
    </Grid>
</UserControl>
