<UserControl x:Class="TempoIDE.UserControls.TopbarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempoIDE.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             PreviewMouseLeftButtonDown="TopbarMenu_OnPreviewMouseLeftButtonDown"
             Loaded="TopbarMenu_OnLoaded">
    
    <StackPanel>
        <TextBlock Name="MenuNameTextBlock"/>
        
        <Canvas>
            <StackPanel Name="ItemsPanel" Width="200" Visibility="Collapsed" ZIndex="2"/>
        </Canvas>
    </StackPanel>
</UserControl>
