<UserControl x:Class="TempoIDE.UserControls.TopbarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             PreviewMouseLeftButtonDown="TopbarMenu_OnPreviewMouseLeftButtonDown"
             Loaded="TopbarMenu_OnLoaded">
    <UserControl.Resources>
        <SolidColorBrush x:Key="TopbarMenuSelectedColor" Color="#466b8a"></SolidColorBrush>
    </UserControl.Resources>
     
     <UserControl.ContextMenu>
         <ContextMenu
             Name="Menu"
             Placement="Bottom"
             Background="{DynamicResource ToolbarBackgroundColor}">
             <ContextMenu.Resources>
                 <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource MenuItemStyle}"/>
             </ContextMenu.Resources> 
         </ContextMenu>
     </UserControl.ContextMenu>
     
    <TextBlock 
        Name="MenuNameTextBlock"
        Foreground="{DynamicResource BaseTextColor}" 
        FontFamily="Roboto Thin" 
        FontSize="13"/>
</UserControl>
