<UserControl x:Class="TempoIDE.UserControls.TopbarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempoIDE.UserControls"
             mc:Ignorable="d"
             PreviewMouseLeftButtonDown="TopbarMenu_OnPreviewMouseLeftButtonDown"
             Loaded="TopbarMenu_OnLoaded">
    <UserControl.Resources>
        <SolidColorBrush x:Key="TopbarMenuSelectedColor" Color="#466b8a"></SolidColorBrush>
    </UserControl.Resources>
     
     <UserControl.ContextMenu>
         <ContextMenu
             Name="Menu"
             Placement="Bottom"
             Background="{StaticResource DarkToolbarBackgroundColor}">
             <ContextMenu.Resources>
                 <Style TargetType="{x:Type MenuItem}">
                     <Setter Property="Foreground" Value="{StaticResource DarkBaseTextColor}"/>
                 </Style>
             </ContextMenu.Resources> 
         </ContextMenu>
     </UserControl.ContextMenu>
     
    <TextBlock 
        Name="MenuNameTextBlock"
        Foreground="{StaticResource DarkBaseTextColor}" 
        FontFamily="Roboto Thin" 
        FontSize="13"/>
</UserControl>
