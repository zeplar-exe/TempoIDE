<UserControl x:Class="TempoIDE.UserControls.SyntaxTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:userControls="clr-namespace:TempoIDE.UserControls"
             Loaded="SyntaxTextBox_OnLoaded"
             PreviewMouseLeftButtonDown="SyntaxTextBox_OnPreviewMouseLeftButtonDown"
             PreviewMouseMove="SyntaxTextBox_OnPreviewMouseMove"
             PreviewMouseLeftButtonUp="SyntaxTextBox_OnPreviewMouseLeftButtonUp"
             GotFocus="SyntaxTextBox_OnGotFocus"
             LostFocus="SyntaxTextBox_OnLostFocus"
             TextInput="SyntaxTextBox_OnTextInput"
             KeyDown="SyntaxTextBox_OnKeyDown"
             MouseLeave="SyntaxTextBox_OnMouseLeave">
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <userControls:ColoredLabel 
            x:Name="TextArea"
            OnAfterRender="TextArea_OnAfterRender"
            OnBeforeCharacterRender="TextArea_OnBeforeCharacterRender"
            TextChanged="SyntaxTextBox_OnTextChanged"/>
        
        <userControls:AutoCompleteBox
            x:Name="AutoComplete"
            Visibility="Collapsed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"/>
    </Grid>
</UserControl>
