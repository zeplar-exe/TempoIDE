<local:Editor x:Class="TempoIDE.UserControls.FileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempoIDE.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             GotFocus="FileEditor_OnGotFocus">
    <local:Editor.Resources>
        <Style TargetType="{x:Type local:SyntaxTextBox}">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundColor}"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0, 1, 0, 1"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>
    </local:Editor.Resources>
    
    <ScrollViewer>
        <local:SyntaxTextBox
            x:Name="TextEditor"
            Loaded="TextEditor_OnLoaded"
            TextChanged="TextEditor_OnTextChanged" />
    </ScrollViewer>
</local:Editor>
