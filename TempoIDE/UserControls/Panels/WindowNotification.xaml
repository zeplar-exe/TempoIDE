<UserControl x:Class="TempoIDE.UserControls.Panels.WindowNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource NotificationColor}"
             Margin="0, 5, 0, 0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Image Grid.Column="0" Name="Icon"/>
            <Button Grid.Column="2" Content="X" Click="Close_OnClick"/>
        </Grid>
        
        <TextBlock Grid.Row="1" Name="Details"/>
    </Grid>
</UserControl>
