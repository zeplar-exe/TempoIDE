<ContextMenu x:Class="TempoIDE.UserControls.Panels.FileSystemItemContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:panels="clr-namespace:TempoIDE.UserControls.Panels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <ContextMenu.CommandBindings>
        <CommandBinding 
            Command="{x:Static panels:FileSystemItemContextMenu.CreateTypeFile}"
            Executed="CreateTypeFileExecuted"/>
        <CommandBinding
            Command="{x:Static panels:FileSystemItemContextMenu.ExcludeFile}"
            Executed="ExcludeFileExecuted"/>
    </ContextMenu.CommandBindings>
    
    <MenuItem Header="Create">
        <MenuItem Header="Type" Command="{x:Static panels:FileSystemItemContextMenu.CreateTypeFile}"/>
    </MenuItem>
    
    <MenuItem Header="Exclude" Command="{x:Static panels:FileSystemItemContextMenu.ExcludeFile}"/>
    
    <Separator/>
</ContextMenu>