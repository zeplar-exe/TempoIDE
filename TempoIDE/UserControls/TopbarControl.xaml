<Border x:Class="TempoIDE.UserControls.TopbarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempoIDE.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>
                    
        <StackPanel x:Name="TopbarMenu" Grid.Column="0" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type local:TopbarMenu}">
                    <Setter Property="Margin" Value="3,0" />
                </Style>
            </StackPanel.Resources>
        </StackPanel>
        
        <Label Grid.Column="1" MouseLeftButtonDown="Topbar_OnPreviewMouseLeftButtonDown"/>

        <Button
            Grid.Column="2"
            Content="Min"
            Background="Transparent"
            Foreground="{DynamicResource BaseTextColor}"
            BorderThickness="0"
            Click="MinimizeButton_OnClick" />

        <Button
            Grid.Column="3"
            Content="Max"
            Background="Transparent"
            Foreground="{DynamicResource BaseTextColor}"
            BorderThickness="0"
            Click="MaximizeButton_OnClick" />

        <Button
            Grid.Column="4"
            Content="X"
            Background="Transparent"
            Foreground="{DynamicResource BaseTextColor}"
            BorderThickness="0"
            Click="CloseButton_OnClick" />
    </Grid>
</Border>
