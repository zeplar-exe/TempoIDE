<StackPanel x:Class="TempoIDE.UserControls.TopbarControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:TempoIDE.UserControls"
            mc:Ignorable="d"
            d:DesignHeight="300" d:DesignWidth="300"
            Loaded="TopbarControl_OnLoaded">
    
    <Border
        MaxHeight="18"
        BorderBrush="{StaticResource BaseBorderColor}"
        Background="Transparent"
        BorderThickness="0, 0, 0, 1"
        MouseDown="OnMouseDown">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type local:TopbarMenu}">
                        <Setter Property="Margin" Value="3,0" />
                    </Style>
                </StackPanel.Resources>
                
                <local:TopbarMenu MenuName="File">
                    <local:TopbarMenu.Items>
                        <local:TopbarMenuItem Description="Create Solution..."/>
                        <local:TopbarMenuItem Description="Open existing"/>
                    </local:TopbarMenu.Items>
                </local:TopbarMenu>
                
                <local:TopbarMenu MenuName="Edit">
                    <local:TopbarMenu.Items>
                        <local:TopbarMenuItem Description="Copy" Keybinds="Ctrl+C"/>
                        <local:TopbarMenuItem Description="Paste" Keybinds="Ctrl+V"/>
                        <local:TopbarMenuItem Description="Cut" Keybinds="Ctrl+X"/>
                        <local:TopbarMenuItem Description="Select All" Keybinds="Ctrl+A"/>
                    </local:TopbarMenu.Items>
                </local:TopbarMenu>
            </StackPanel>
            
            <Button 
                Grid.Column="2" 
                Content="Min" 
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                Click="MinimizeButton_OnClick"/>
            
            <Button 
                Grid.Column="3" 
                Content="Max" 
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                Click="MaximizeButton_OnClick"/>
            
            <Button 
                Grid.Column="4" 
                Content="X" 
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                Click="CloseButton_OnClick"/>
        </Grid>
    </Border>
    
    <Border
        Height="20"
        BorderBrush="{StaticResource BaseBorderColor}"
        BorderThickness="0, 0, 0, 1"/>
</StackPanel>
