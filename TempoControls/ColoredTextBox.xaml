<UserControl x:Class="TempoControls.ColoredTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tempoControls="clr-namespace:TempoControls"
             xmlns:controls="clr-namespace:TempoControls.Controls"
             Focusable="True"
             IsTabStop="True"
             Loaded="SyntaxTextBox_OnLoaded"
             PreviewMouseLeftButtonDown="SyntaxTextBox_OnPreviewMouseLeftButtonDown"
             PreviewMouseMove="SyntaxTextBox_OnPreviewMouseMove"
             PreviewMouseLeftButtonUp="SyntaxTextBox_OnPreviewMouseLeftButtonUp"
             GotFocus="SyntaxTextBox_OnGotFocus"
             LostFocus="SyntaxTextBox_OnLostFocus"
             TextInput="SyntaxTextBox_OnTextInput"
             KeyDown="SyntaxTextBox_OnKeyDown"
             MouseLeave="SyntaxTextBox_OnMouseLeave">
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <tempoControls:ColoredLabel
            x:Name="TextArea"
            x:FieldModifier="public"
            AfterRender="TextArea_OnAfterRender"
            BeforeCharacterRender="TextArea_OnBeforeCharacterRender"
            TextChanged="SyntaxTextBox_OnTextChanged"/>
        
        <controls:AutoCompleteBox
            x:Name="AutoComplete"
            Visibility="Collapsed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"/>
    </Grid>
</UserControl>
